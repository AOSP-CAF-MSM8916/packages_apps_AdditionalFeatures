<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

        <!-- Statusbar -->
        <PreferenceScreen
            android:key="statusbar_category"
            android:title="@string/statusbar_title" 
            android:fragment="com.extra.settings.StatusbarSettings"
            android:icon="@drawable/ic_settings_statusbar"/>

        <!-- Navigation -->
        <Preference
            android:key="navigation_options"
            android:fragment="com.extra.settings.NavbarSettings"
            android:title="@string/navigationbar_settings_title" 
            android:icon="@drawable/ic_settings_navbar"/>

        <!-- Gestures -->
        <Preference
            android:key="gestures_category"
            android:title="@string/gestures_title"
            android:fragment="com.extra.settings.GestureSettings"
            android:icon="@drawable/ic_settings_gesture"/>

        <!-- Power Menu -->
        <PreferenceScreen
            android:key="powermenu__category"
            android:title="@string/powermenu_title" 
            android:fragment="com.extra.settings.PowerMenuSettings"
            android:icon="@drawable/ic_settings_powermenu"/>

        <!-- Power Menu -->
        <PreferenceScreen
            android:key="lockscreen_category"
            android:title="@string/lockscreen_title" 
            android:fragment="com.extra.settings.LockscreenSettings"
            android:icon="@drawable/ic_settings_lockscreen"/>

</PreferenceScreen>
